<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/sample_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="改写自https://blog.csdn.net/guyuealian"
            android:layout_gravity="center"/>
        <Button
            android:onClick="click02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#008FCF"
            android:text="检测第1副图像(2)" />
        <Button
            android:onClick="click07"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4F8F8F"
            android:text="检测第2副图像(7)" />
        <Button
            android:onClick="click08"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8FCF00"
            android:text="检测第3副图像(8)" />
        <TextView
            android:id="@+id/txt_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="结果为："/>
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/sample_text_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简单的测试 EEIS@USTC"
            android:layout_gravity="center"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>